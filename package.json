{
  "name": "tasks",
  "version": "1.0.0",
  "description": "tasks manager",
  "main": "application.js",
  "scripts": {
    "dist": "pkg src/application.js --out-path dist",
    "lint": "npx standard",
    "lint-fix": "npx standard --fix",
    "test": "npx standard && c8 --check-coverage --reporter text --reporter html --reporter cobertura mocha",
    "service": "node src/application.js",
    "build": "npm install && npm run test && npm run dist",
    "clean": "rm -rf dist && rm -rf node_modules && rm -rf coverage"
  },
  "author": "Thomas Lehmann",
  "license": "MIT",
  "dependencies": {
    "express": "^4.17.2",
    "jsonschema": "^1.4.0",
    "node-schedule": "^2.1.0",
    "uuid": "^8.3.2",
    "winston": "^3.3.3",
    "yargs": "^17.3.1"
  },
  "devDependencies": {
    "pkg": "^5.5.2",
    "c8": "^7.11.0",
    "mocha": "^9.1.3",
    "standard": "^16.0.4",
    "supertest": "^6.2.1"
  }
}
